{
  "name": "manis",
  "private": true,
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "prepare": "husky",
    "check": "oxlint",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "dev": "turbo dev",
    "build": "turbo build",
    "check-types": "turbo check-types",
    "dev:native": "turbo -F native dev",
    "dev:web": "turbo -F web dev",
    "dev:server": "turbo -F @manis/backend dev",
    "dev:setup": "turbo -F @manis/backend dev:setup"
  },
  "dependencies": {
    "dotenv": "^17.2.2"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20250822.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "oxlint": "^1.12.0",
    "prettier": "^3.6.2",
    "turbo": "^2.5.4"
  },
  "lint-staged": {
    "**/*.{js,mjs,cjs,jsx,ts,mts,cts,tsx,vue,astro,svelte}": [
      "prettier --write",
      "oxlint"
    ]
  },
  "packageManager": "bun@1.2.16"
}
