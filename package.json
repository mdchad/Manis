{
  "name": "manis",
  "private": true,
  "type": "module",
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*"
    ],
    "catalog": {
      "hono": "^4.8.2",
      "@trpc/server": "^11.5.0",
      "better-auth": "^1.3.13",
      "dotenv": "^17.2.2",
      "zod": "^4.1.11",
      "typescript": "^5.8.2",
      "tsdown": "^0.15.5",
      "@trpc/client": "^11.5.0"
    }
  },
  "scripts": {
    "prepare": "husky",
    "check": "oxlint",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "dev": "alchemy dev",
    "build": "turbo build",
    "check-types": "turbo check-types",
    "dev:native": "turbo -F native dev",
    "dev:web": "turbo -F web dev",
    "dev:server": "turbo -F server dev",
    "db:push": "turbo -F @manis/db db:push",
    "db:studio": "turbo -F @manis/db db:studio",
    "db:generate": "turbo -F @manis/db db:generate",
    "db:migrate": "turbo -F @manis/db db:migrate",
    "deploy": "alchemy deploy",
    "destroy": "alchemy destroy"
  },
  "dependencies": {
    "convex": "^1.27.0",
    "better-auth": "1.3.27",
    "@convex-dev/better-auth": "^0.9.1",
    "dotenv": "^17.2.2",
    "zod": "^4.1.11"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20250822.0",
    "@types/node": "^22.13.11",
    "alchemy": "^0.70.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "oxlint": "^1.12.0",
    "prettier": "^3.6.2",
    "tsdown": "^0.15.5",
    "turbo": "^2.5.4"
  },
  "lint-staged": {
    "**/*.{js,mjs,cjs,jsx,ts,mts,cts,tsx,vue,astro,svelte}": [
      "prettier --write",
      "oxlint"
    ]
  },
  "packageManager": "bun@1.2.16"
}
